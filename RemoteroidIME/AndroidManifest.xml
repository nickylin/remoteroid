<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.androidhuman.remoteroid.ime" android:versionCode="1" android:versionName="1.0">
	
	<uses-sdk
		android:minSdkVersion="8" android:targetSdkVersion="14"/>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
	
	<application
		android:label="@string/ime_name" android:icon="@drawable/icon">
		<service
			android:name="com.androidhuman.remoteroid.ime.SoftKeyboard"
			android:permission="android.permission.BIND_INPUT_METHOD">
			<intent-filter>
				<action
					android:name="android.view.InputMethod" />
			</intent-filter>
			<meta-data
				android:name="android.view.im"
				android:resource="@xml/method" />
		</service>
	</application>
</manifest>
