<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.secmem.remoteroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" />
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/Theme.Sherlock"
        uiOptions="splitActionBarWhenNarrow">
        <activity android:name=".activity.Redirector" android:clearTaskOnLaunch="true" android:launchMode="singleInstance" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Main"
            android:label="@string/app_name" >
            
        </activity>
        <service android:name=".service.NotificationReceiverService">
           	<intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                 android:resource="@xml/notification_receiver_properties"/>
        </service>
        <activity android:name=".activity.NotificationReceiverSettings"></activity>
        <activity android:name=".activity.PackageSelector" android:label="@string/select_package"></activity>
        <service android:name=".service.RemoteroidService"></service>
        <activity android:name=".activity.MainActivity">
            
        </activity>
        <activity android:name=".activity.ExplorerActivity" android:label="@string/file_explorer"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".receiver.SmsReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.SmsSentResultReceiver">
            <intent-filter>
                <action android:name="org.secmem.remoteroid.intent.action.SMS_SENT"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.RemoteroidDeviceAdminReceiver"
                android:description="@string/app_name"
        		android:permission="android.permission.BIND_DEVICE_ADMIN">
		    <meta-data android:name="android.app.device_admin"
		            android:resource="@xml/remoteroid_device_admin" />
		    <intent-filter>
		        <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
		    </intent-filter>
        </receiver>
        
        <activity android:name=".activity.ConfigurationChecker"></activity>
        <service android:name=".service.SocketService"></service>
        <activity android:name=".dialog.CategoryDialog"
            android:theme="@style/CustomTheme">
        </activity>
        <service
			android:name=".ime.HardKeyboard"
			android:permission="android.permission.BIND_INPUT_METHOD">
			<intent-filter>
				<action
					android:name="android.view.InputMethod" />
			</intent-filter>
			<meta-data
				android:name="android.view.im"
				android:resource="@xml/remoteroid_ime" />
		</service>
        <service android:name=".service.FrameBufferService"></service>
        <activity android:name=".activity.TouchCalibrationActivity"></activity>
        <service android:name=".service.CalibrationService"></service>
        
    </application>

</manifest>