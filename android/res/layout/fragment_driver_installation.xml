<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/driver_installation_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_have_to_install_remoteroid_driver_in_order_to_use_remoteroid"
        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_below="@+id/driver_installation_img" android:padding="10dp"/>

    <Button
        android:id="@+id/driver_installation_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/install_driver" android:layout_margin="5dp"/>

    <ProgressBar
        android:id="@+id/driver_installation_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:visibility="gone"/>

    <ImageView
        android:id="@+id/driver_installation_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/remoteroid_driver_description"
        android:layout_centerHorizontal="true" android:src="@drawable/img_driver_scrshot"/>

</RelativeLayout>